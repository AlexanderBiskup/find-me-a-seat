<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/home_overview"
                android:layout_width="406dp"
                android:layout_height="54dp"
                android:background="@color/colorAccent"
                android:gravity="center_vertical"
                android:text="@string/Overview" />

            <TextView
                android:id="@+id/home_bookings"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical|fill_vertical"
                android:text="@string/Bookings" />

            <fragment
                android:id="@+id/home_all_bookings"
                android:name="at.ac.univie.hci.findmeaseat.ui.bookings.AllBookingsFragment"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                tools:layout="@layout/fragment_all_bookings" />

            <TextView
                android:id="@+id/home_buildings"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical|fill_vertical"
                android:text="Favorite Buildings" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
